<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BACACAC"
    tools:context=".ui.gallery.ControlFragment">

    <Button
        android:id="@+id/btn_shutdown"
        android:layout_width="271dp"
        android:layout_height="95dp"
        android:layout_marginTop="56dp"
        android:background="@color/btnColor"
        android:text="МАЛИНКА ВЫРУБАЙСЯ!"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reboot"
        android:layout_width="271dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:background="@color/btnColor"
        android:text="МАЛИНКА РЕБУТАЙСЯ!"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_shutdown" />

</androidx.constraintlayout.widget.ConstraintLayout>